
@{
    if (ViewBag.Message != null)
    {
        <h1 class="text-primary">@ViewBag.Message</h1>
    }
}
@using (Html.BeginForm("Login", "Coordinator", FormMethod.Post))
{
    <div class="form-group">
        @Html.TextBox("Username", null, new { @class = "form-control", placeholder = "UserName" })
    </div>
    <div class="form-group">
        @Html.Password("Password", null, new { @class = "form-control", placeholder = "UserName" })
    </div>
    <div>
        <input type="hidden" value="@ViewBag.ReturnUrl" name="ReturnUrl" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Login</button>
    </div>
}



