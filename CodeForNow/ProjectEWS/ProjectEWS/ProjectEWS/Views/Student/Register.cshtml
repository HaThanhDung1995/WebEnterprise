@model ProjectEWS.Entity.Student
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>UserName</label>
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Username" })
    </div>
    <div class="form-group">
        <label>Pass</label>
        @Html.PasswordFor(model => model.Pass, new { @class = "form-control", placeholder = "Password" })
    </div>
    <div class="form-group">
        <label>FullName</label>
        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", placeholder = "FullName" })
    </div>
    <div class="form-group">
        <label>Course</label>
        @Html.DropDownList("CoordinatorId")
    </div>
    <div class="form-group">
        <label>Picture</label>
        <input type="file" name="ImageUpload" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Submit</button>
    </div>
}

